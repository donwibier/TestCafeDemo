@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
	<div class="text-center">
		<h1 class="display-4">Welcome</h1>
	</div>
	@if (Model.ShowForm)
	{
		<div id="form">
			@using (Html.BeginForm())
			{
				<div class="form-group">
					<label for="Name" class="col-sm-2 control-label">Name</label>
					<div class="col-sm-10">
						<input type="text" id="frmName" class="form-control" name="Name" value="@Model.EditorModel.Name">
					</div>
				</div>
				<div class="form-group">
					<label for="Email" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-10">
						<input type="text" id="frmEmail" class="form-control" name="Email" value="@Model.EditorModel.Email">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button id="register" type="submit" class="btn btn-default">Register now</button>
					</div>
				</div>
			}

		</div>
	}
	else
	{
		<div id="response">@String.Format("Thank you {0} you will receive an email at {1}", Model.EditorModel.Name, Model.EditorModel.Email)</div>
	}

    
